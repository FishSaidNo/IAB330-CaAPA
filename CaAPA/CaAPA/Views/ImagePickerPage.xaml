<?xml version="1.0" encoding="UTF-8"?>
<BaseView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CaAPA.ImagePickerPage">
  <StackLayout Padding = "10,20,10,30" Orientation="Vertical" >
    <Button x:Name="pickImage" Text="Pick Image" Clicked="OnPick"/>
    <Button x:Name="takePicture" Text="Take Picture" />
    
    <Image x:Name="img" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
    
    <Button x:Name="confirm" Text="Confirm" Command="{Binding OnSelectImage}"/>
  </StackLayout>
</BaseView>