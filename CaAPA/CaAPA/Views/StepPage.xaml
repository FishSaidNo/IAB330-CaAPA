<?xml version="1.0" encoding="utf-8" ?>
<BaseView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CaAPA.StepPage">
  <StackLayout Padding = "10,20,10,30" Orientation="Vertical" >
    <Label x:Name="activityNameLabel" Text="Prepare Dinner" HorizontalOptions="CenterAndExpand" TextColor="Black" Font="Bold"/>
    <Label x:Name="activityLocationLabel" Text="Kitchen" HorizontalOptions="CenterAndExpand" TextColor="Black" Font="Bold"/>
<!--    <Image HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>-->
    <Label x:Name="instructions" Text="Instructions" HorizontalOptions="FillAndExpand" TextColor="Black"/>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="1*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Button Grid.Row="0" Grid.Column="0" Text="Back" Clicked="goBackStep"/>
      <Button Grid.Row="0" Grid.Column="1" Text="Next" Clicked="goForwardStep"/>
    </Grid>
  </StackLayout>
  
</BaseView>
